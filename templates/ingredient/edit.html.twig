{% extends 'base.html.twig' %}

{% block title %}Edit Ingredient{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Modification de l'ingr√©dient</h1>
        <form name="ingredient" method="post">
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                <div class="form-error">
                    {{ form_errors(form.name) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.price) }}
                {{ form_widget(form.price) }}
                <div class="form-error">
                    {{ form_errors(form.price) }}
                </div>
            </div>
            {{ form_row(form._token) }}
            <button type="submit" id="ingredient_submit" name="ingredient[submit]" class="btn btn-primary mt-4">Modifier
            </button>
        </form>

        {{ include('ingredient/_delete_form.html.twig') }}
    </div>

{% endblock %}
