{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block body %}

<div class="container">

    <h1 class="mt-4">Ingredient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ingredient.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ ingredient.price }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_ingredient_edit', { id: ingredient.id }) }}" class="btn btn-primary mt-4">Modifier</a>
    {{ include('ingredient/_delete_form.html.twig') }}
</div>
{% endblock %}
