{% extends 'base.html.twig' %}

{% block title %}Pizza{% endblock %}

{% block body %}

<div class="container">

    <h1 class="mt-4">Pizza</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ pizza.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ pizza.name }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ pizza.price }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_pizza_edit', { id: pizza.id }) }}" class="btn btn-primary mt-4">Modifier</a>
    {{ include('pizza/_delete_form.html.twig') }}
</div>
{% endblock %}
