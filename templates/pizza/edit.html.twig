{% extends 'base.html.twig' %}
{% block title %}Edit Pizza{% endblock %}
{% block body %}
    <div class="container">

        <h1 class="mt-4">Modification de la Pizza</h1>

        <form name="recipe" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <h4>{{ form_label(form.name) }}</h4>
                {{ form_widget(form.name) }}
                <div class="form-error">
                    {{ form_errors(form.name) }}
                </div>
            </div>
            <hr>
            <div class="form-image">
                <h4>{{ form_label(form.imageFile) }}</h4>
                {{ form_widget(form.imageFile) }}
            </div>
            <hr>
            <h4>{{ form_label(form.ingredients) }}</h4>
            <div id="ingredients-wrapper" class="mt-4">
                {% for field in form.ingredients %}
                    <div class="ingredientsCheckbox">
                        {{ form_widget(field) }}
                        {{ form_label(field) }}
                    </div>
                {% endfor %}
            </div>

            {{ form_row(form._token) }}
            <hr>
            <button type="submit" id="pizza_submit" name="pizza[submit]" class="btn btn-primary mt-4">Modifier
            </button>
        </form>
        {{ include('pizza/_delete_form.html.twig') }}
    </div>

{% endblock %}
